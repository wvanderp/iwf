{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "build",
    "./nyc_output",
    "coverage",
    "diff",
    "tests/**/*",
    "integration/**/*",
    "./test.ts",
    "./lib",
    "./scrap*.ts",
    "**/*.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ]
}
